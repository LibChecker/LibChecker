<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@android:color/transparent"
    app:cardCornerRadius="@dimen/album_card_corner"
    app:cardElevation="0dp"
    app:rippleColor="@null"
    app:strokeColor="@color/cardBorder"
    app:strokeWidth="@dimen/album_card_stroke_width">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:clickable="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/album_card_inset_horizontal"
        android:paddingVertical="@dimen/album_card_inset_vertical">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/album_card_icon_size"
            android:layout_height="@dimen/album_card_icon_size"
            android:background="@drawable/bg_gray_circle"
            android:backgroundTint="@color/material_red_200"
            android:importantForAccessibility="no"
            android:scaleType="centerInside"
            tools:src="@drawable/ic_snapshot" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/album_card_inset_horizontal"
            android:orientation="vertical">

            <com.absinthe.libraries.view.AlwaysMarqueeTextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollHorizontally="true"
                android:textAppearance="?textAppearanceHeadline6"
                tools:text="Comparation" />

            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?textAppearanceSubtitle2"
                android:textColor="@color/textSecondary"
                tools:text="Compare with two snapshots" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>